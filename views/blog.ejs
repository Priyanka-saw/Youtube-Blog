<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
</head>

<body>

    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>

        <% 
            let imageUrl = blog.coverImageURL || '/images/default.png';
            if (imageUrl.startsWith('/public/')) {
                imageUrl = imageUrl.replace(/^\/public/, '');
            }
        %>

        <img src="<%= imageUrl %>" width="300" alt="Cover image" class="img-fluid rounded" />

        <pre><%= blog.body %></pre>
    </div>


    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL || '/images/default.png' %>" width="60px" /> <%= 
             blog.createdBy.fullname %>
        </div>

    <div class="container mt-4">
        <h2>Comments (<%= comments.length %>)</h2>
       <% if (locals.user) { %>
         <form action="/blog/comment/<%= blog._id %>" method="POST">
            <div class="mb-3">
                <label 
                for="body" 
                class="form-label">Add a comment
            </label>
                <input 
                type="text"
                class="form-control" 
                id="body" 
                name="body" 
                rows="2" 
                required>
            </input>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL || '/images/default.png' %>" width="30px" /> <%= comment.createdBy.fullname %>
                    <p><%= comment.body %></p>
                </div>
            <% }); %>

        </div>
    </div>

    <%- include('./partials/scripts') %>

</body>
</html>
